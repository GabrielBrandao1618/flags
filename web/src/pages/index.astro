---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome to flags game">
	<main class="flex flex-col h-screen items-center justify-center bg-gray-900">
		<div class="flex flex-col w-full max-w-[400px] bg-gray-800 rounded gap-2 p-4 box-border">
			<h1 class="text-white font-bold text-2xl w-full text-center">
				Welcome to flags game
			</h1>
			<p class="text-gray-200">
				Test your knowledges with this simple game.
			</p>
			<button class="bg-black rounded text-white self-end text-xl px-2 py-1 font-bold">
				Play
			</button>
		</div>
	</main>
</Layout>
